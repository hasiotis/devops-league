# Digital Ocean setup
export DIGITALOCEAN_TOKEN="DIGITALOCEAN_TOKEN"
export DO_API_TOKEN=${DIGITALOCEAN_TOKEN}

# Linode Setup
export LINODE_TOKEN="LINODE_TOKEN"
export LINODE_ACCESS_TOKEN=${LINODE_TOKEN}
